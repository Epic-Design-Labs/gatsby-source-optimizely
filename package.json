{
	"name": "@epicdesignlabs/gatsby-source-optimizely",
	"version": "1.0.0",
	"description": "This unofficial source plugin makes Optimizely API data available in GatsbyJS sites. Currently in active development.",
	"scripts": {
		"autotest": "supervisor -q -n exit -x node_modules/.bin/_mocha --",
		"build": "babel ./src/ --out-dir ./ --source-maps",
		"exectests": "nyc ./node_modules/.bin/_mocha",
		"watch": "babel ./src/ --out-dir ./ --source-maps --watch",
		"lint:eslint": "eslint './src/**/*.js' --quiet --fix --color --ignore-path .gitignore",
		"lint:prettier": "prettier './src/**/*.js' --write --ignore-path .gitignore",
		"lint": "yarn lint:eslint && yarn lint:prettier",
		"test": "yarn exectests && yarn lint",
		"prepare": "cross-env NODE_ENV=production yarn build",
		"validate": "yarn lint",
		"release": "release-it --ci",
		"prerelease": "git checkout main && git pull origin main && yarn && yarn validate && git add .",
		"ci:validate": "rm -rf node_modules && yarn install --frozen-lockfile && yarn validate",
		"prepublishOnly": "yarn ci:validate && yarn build"
	},
	"homepage": "https://github.com/Epic-Design-Labs/gatsby-source-optimizely/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Epic-Design-Labs/gatsby-source-optimizely.git"
	},
	"keywords": [
		"@epicdesignlabs",
		"api",
		"content",
		"delivery",
		"bigcommerce",
		"gatsby-plugin",
		"gatsby-source-optimizely",
		"gatsby",
		"plugin",
		"source"
	],
	"author": {
		"name": "Epic Design Labs",
		"url": "https://epicdesignlabs.com",
		"email": "info@epicdesignlabs.com"
	},
	"license": "MIT",
	"main": "index.js",
	"dependencies": {
		"axios": "^0.27.2",
		"gatsby-plugin-utils": "^3.12.0",
		"http-proxy-middleware": "^2.0.4",
		"lodash": "^4.17.21",
		"micro": "^9.3.4"
	},
	"peerDependencies": {
		"gatsby": ">3.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.16.8",
		"@babel/core": "^7.16.12",
		"@babel/eslint-parser": "^7.16.5",
		"@babel/runtime": "^7.18.3",
		"@commitlint/cli": "^17.0.2",
		"@commitlint/config-conventional": "^17.0.2",
		"agentkeepalive": "^4.2.1",
		"babel-preset-gatsby-package": "^2.16.0",
		"babel-preset-minify": "^0.5.2",
		"chai": "^4.3.6",
		"commitizen": "^4.2.4",
		"cross-env": "^7.0.3",
		"cz-conventional-changelog": "^3.3.0",
		"dataloader": "^2.1.0",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-babel": "^5.3.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.30.0",
		"gatsby": "^4.15.2",
		"gatsby-core-utils": "^3.16.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.0",
		"mocha": "^10.0.0",
		"nock": "^13.2.6",
		"nyc": "^15.1.0",
		"prettier": "^2.6.2",
		"react": "^18.0.0",
		"release-it": "^15.1.1",
		"sinon": "^14.0.0",
		"supervisor": "^0.12.0"
	},
	"bugs": {
		"url": "https://github.com/Epic-Design-Labs/gatsby-source-optimizely/issues"
	},
	"directories": {
		"src": "src"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"**/*.{js,jsx,md,mdx,json}": [
			"yarn lint",
			"git add"
		]
	},
	"engines": {
		"node": ">=14.15.0"
	},
	"volta": {
		"node": "16.15.1",
		"yarn": "1.22.19"
	}
}
